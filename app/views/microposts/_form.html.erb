<div class="columns">
  <div class="column is-8 is-centered">

  <%= simple_form_for(@micropost) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <div class="control">
        <%= f.input :content, 
        required: true, input_html: { class: "input" }, 
        wrapper: false, label_html: { class:"label" } %>
      </div>
      
      <% if !micropost.expiration_date.nil? %>
        <p class="tag is-warning">will expire on <%= micropost.expiration_date.to_formatted_s(:short)%> </p>
        <br><br>
      <% end %>

      <div class="control" style="width:150px">
        <%= f.input :time_posted, 
        required: true, input_html: { class: "input" }, 
        wrapper: false, label_html: { class:"label" } %>
      </div>
    </div>

    <p>*set expiration in days</p>
    
    <div class="form-actions">
      <br>
      <%= f.button :submit ,class:"button is-warning" %>
      
    </div>
  <% end %>
